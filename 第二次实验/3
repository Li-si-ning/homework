#include <stdio.h>

int main() {
    char input;

    printf("请输入一个字符: ");
    scanf("%c", &input);
    printf("The eighth bit is %d,\n", (input >> 7) & 1);
    printf("The seventh bit is %d,\n", (input >> 6) & 1);
    printf("The sixth bit is %d,\n", (input >> 5) & 1);
    printf("The fifth bit is %d,\n", (input >> 4) & 1);
    printf("The fourth bit is %d,\n", (input >> 3) & 1);
    printf("The third bit is %d,\n", (input >> 2) & 1);
    printf("The second bit is %d,\n", (input >> 1) & 1);
    printf("The first bit is %d.\n", input & 1);

    return 0;
}
