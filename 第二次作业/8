#include<stdio.h>
int main()
{
        int x,t,n=0,out=0;
        printf("请输入一个正整数：");
        scanf("%d",&x);
        t=x;
        while(t>0)
        {
                t/=10;
                n++;//这个数有几位
        }
        printf("这个数有%d位\n",n);
        printf("%d的反转输出是: ",x);
        while(n>0)
        {
                t=x;
                t%=10;
                out*=10;
                out+=t;
    x/=10;
    n--;
  }
        printf("%d",out);
        return 0;
}
