#include<stdio.h>
struct Student{
  char name[20];
  int score;
}students[3];

int main(){
  struct Student *pStruct=students;
  printf("请输入三名学生的姓名和成绩：\n");
  for(int i=0;i<3;i++)
  {
      printf("学生%d姓名:",i+1);
      scanf("%s",(pStruct+i)->name);
      printf("学生%d成绩:",i+1);
      scanf("%d",&(pStruct+i)->score);
  }
  struct Student *max=pStruct;
  for(int i=0;i<3;i++){
    if((pStruct+i)->score>max->score){
    max=pStruct+i;
  }
}
printf("最高分学生；\n");
printf("姓名；%s\n",max->name);
printf("成绩；%d\n",max->score);

return 0;
}
